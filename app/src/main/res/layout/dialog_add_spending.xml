<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/dialog_background"
    android:minWidth="350dp"
    android:minHeight="500dp"
    android:orientation="vertical"
    android:padding="20dp">

    <com.google.android.material.textfield.TextInputLayout
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="사용한 금액"
        app:boxStrokeColor="@color/edit_color"
        app:endIconMode="clear_text"
        app:helperText="사용 금액을 입력해주세요"
        app:hintTextColor="@color/edit_color">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/editMoney"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:textSize="18sp" />

    </com.google.android.material.textfield.TextInputLayout>


    <GridLayout
        android:id="@+id/gridLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginVertical="10dp"
        android:columnCount="4"
        android:rowCount="3">

        <org.techtown.accountbook.UI.custom.CustomRadioBtn
            android:id="@+id/food"
            android:layout_width="70dp"
            android:layout_height="80dp"
            android:layout_margin="5dp"
            app:img="@drawable/food"
            app:imgColor="@color/food"
            app:title="음식" />

        <org.techtown.accountbook.UI.custom.CustomRadioBtn
            android:id="@+id/beauty"
            android:layout_width="70dp"
            android:layout_height="80dp"
            android:layout_margin="5dp"
            app:img="@drawable/beauty"
            app:imgColor="@color/beauty"
            app:title="미용" />

        <org.techtown.accountbook.UI.custom.CustomRadioBtn
            android:id="@+id/transport"
            android:layout_width="70dp"
            android:layout_height="80dp"
            android:layout_margin="5dp"
            app:img="@drawable/transport"
            app:imgColor="@color/transport"
            app:title="교통비" />

        <org.techtown.accountbook.UI.custom.CustomRadioBtn
            android:id="@+id/culture"
            android:layout_width="70dp"
            android:layout_height="80dp"
            android:layout_margin="5dp"
            app:img="@drawable/culture"
            app:imgColor="@color/culture"
            app:title="문화 생활" />

        <org.techtown.accountbook.UI.custom.CustomRadioBtn
            android:id="@+id/utility"
            android:layout_width="70dp"
            android:layout_height="80dp"
            android:layout_margin="5dp"
            app:img="@drawable/utility"
            app:imgColor="@color/utility"
            app:title="생필품" />

        <org.techtown.accountbook.UI.custom.CustomRadioBtn
            android:id="@+id/clothes"
            android:layout_width="70dp"
            android:layout_height="80dp"
            android:layout_margin="5dp"
            app:img="@drawable/clothes"
            app:imgColor="@color/clothes"
            app:title="의류" />

        <org.techtown.accountbook.UI.custom.CustomRadioBtn
            android:id="@+id/medical"
            android:layout_width="70dp"
            android:layout_height="80dp"
            android:layout_margin="5dp"
            app:img="@drawable/medical"
            app:imgColor="@color/medical"
            app:title="의료" />

        <org.techtown.accountbook.UI.custom.CustomRadioBtn
            android:id="@+id/deposit"
            android:layout_width="70dp"
            android:layout_height="80dp"
            android:layout_margin="5dp"
            app:img="@drawable/deposit"
            app:imgColor="@color/deposit"
            app:title="저축" />

        <org.techtown.accountbook.UI.custom.CustomRadioBtn
            android:id="@+id/communication"
            android:layout_width="70dp"
            android:layout_height="80dp"
            android:layout_margin="5dp"
            app:img="@drawable/communication"
            app:imgColor="@color/communication"
            app:title="통신비" />

        <org.techtown.accountbook.UI.custom.CustomRadioBtn
            android:id="@+id/school"
            android:layout_width="70dp"
            android:layout_height="80dp"
            android:layout_margin="5dp"
            app:img="@drawable/school"
            app:imgColor="@color/school"
            app:title="교육" />

        <org.techtown.accountbook.UI.custom.CustomRadioBtn
            android:id="@+id/shopping"
            android:layout_width="70dp"
            android:layout_height="80dp"
            android:layout_margin="5dp"
            app:img="@drawable/shopping"
            app:imgColor="@color/shopping"
            app:title="장보기" />

        <org.techtown.accountbook.UI.custom.CustomRadioBtn
            android:id="@+id/etc"
            android:layout_width="70dp"
            android:layout_height="80dp"
            android:layout_margin="5dp"
            app:img="@drawable/etc"
            app:imgColor="@color/etc"
            app:title="기타" />
    </GridLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="20dp">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/submit"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="5dp"
            android:layout_weight="1"
            android:background="@drawable/dialog_btn_background"
            android:text="저장"
            android:textColor="@color/black"
            android:textSize="17sp"
            android:textStyle="bold" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/cancel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_weight="1"
            android:background="@drawable/dialog_btn_background"
            android:text="취소"
            android:textSize="17sp"
            android:textStyle="bold" />

    </LinearLayout>

</LinearLayout>